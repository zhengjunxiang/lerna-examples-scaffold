{
    "compilerOptions": {
        "target": "ES5",
        "rootDir": "src",
        "outDir": "lib",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "module": "commonjs",
        "declaration": true,
        "rootDirs": ["src"],
        "jsx": "preserve",
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true
    },
    "include": [
        "src"
    ]
}