{
    "compilerOptions": {
        "target": "esnext",
        "allowJs": false,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "module": "es6",
        "types": [
            "@wmfe/mach-pro-types"
        ]
    },
    "plugins": [
        {
          "transform": "@formatjs/ts-transformer",
          "import": "transform",
          "type": "config",
          "overrideIdFn": "[sha512:contenthash:base64:6]",
          "ast": true
        }
    ],
    "include": [
        "src"
    ]
}